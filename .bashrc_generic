# vim ~/.bashrc_generic

alias a='alias'                                             # List all aliases
alias ua='unalias -a'                                       # Unalias everything

# Generic Aliases
# Reference: https://gist.github.com/granthenke/6272026
alias ll='ls -l'                                             # List all file in long list excluding hidden files
alias lla='ls -la'                                           # List all file in long list including hidden files
alias llt='ls -latr'                                         # List all file in long list format by modification time
alias c='clear'                                              # Clear Screen
alias k='clear'                                              # Clear Screen
alias cls='clear'                                            # Clear Screen
alias q='exit'                                               # Logout

alias du_sort_asc='du -h * | sort -sh'                       
alias du_sort_desc='du -h * | sort -shr'

alias src='source ~/.bashrc'

alias jv='java -version'                                    # Check java version

alias user='echo $USER'                                     # Get current user

alias show_hidden_files='find . -maxdepth 1 -type f -name ".*"'        # Show hidden files

